
<section class="section--center mdl-grid mdl-grid--no-spacing">
           
<div class="demo-grid-1 mdl-grid">
  <div class="mdl-cell mdl-cell--6-col" >
    <h5>Listing Medicines</h5>


<table id="index-table" class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
  <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Name</th>
      <th class="mdl-data-table__cell--non-numeric">Type</th>
      <th class="mdl-data-table__cell--non-numeric">Category</th>
      <th class="mdl-data-table__cell--non-numeric">Usage</th>
      
      <th ></th>
      <th ><%if current_user.try(:admin?)%><%= link_to new_medicine_path, method: :get, id:"add-b",class: 'mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-js-ripple-effect', style:"bottom:20px; z-index: 10;" do %>
<i class="material-icons">add</i>
<% end %>
<div class="mdl-tooltip" for="add-b">
New Medicine
</div><%end%></th>

    </tr>
  </thead>

  <tbody>
    <% @medicines.each do |medicine| %>
      <tr>
        <td class="mdl-data-table__cell--non-numeric"><%= medicine.name %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= medicine.m_type %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= medicine.category %></td>       
        <td class="mdl-data-table__cell--non-numeric"><%= medicine.usage %></td>
       
        <td><%= link_to 'Edit', edit_medicine_path(medicine),class:"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored",style:"bottom:8px;text-decoration:none;font-size:12px;" %></td>
        <td><%= link_to 'Delete', medicine, method: :delete, data: { confirm: 'Are you sure?' },class:"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent",style:"bottom:8px;text-decoration:none;font-size:12px;" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
          </section>



<script type="text/javascript">$(document).ready(function(){
    $('#index-table').dataTable({
    "bPaginate": true,
    "bFilter": true,
    "bSort": true,
    "sDom": '<"top"flp>rt<"bottom"i><"clear">',

    "aaSorting": [
      [0, "asc"]
    ],
    "aoColumnDefs": [{
      "bSortable": true,
      "aTargets": [0,1,2]
    }, {
      "bSortable": false,
      "aTargets": [3,4,5]
    }],"aoColumns": [
      null,
      null,
      null,
      null,
     
      { "bSearchable": false },
      { "bSearchable": false }
    ] 
  ,"oLanguage": { "sSearch": "" } ,
  "bInfo" : false

});
});</script>