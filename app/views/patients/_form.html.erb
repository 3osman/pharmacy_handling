

<style>  
label,input {
    font: normal 14px roboto !important;
}

.field_with_errors{background-color: transparent;}
#error_explanation{background-color: transparent;}
</style>


<%= form_for(@patient) do |f| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      

      <ul>
      <% @patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="mdl-textfield mdl-js-textfield">
    <%= f.text_field :name, class:"mdl-textfield__input", id:"name_t" %>
        <%= f.label :name, class:"mdl-textfield__label", for:"name_t" %>
  </div>


<div class="mdl-textfield mdl-js-textfield">
    <%= f.text_field :age, class:"mdl-textfield__input", pattern:"-?[0-9]*(\.[0-9]+)?", id:"age_t" %>
        <%= f.label :age,class:"mdl-textfield__label", for:"age_t" %>
            <span class="mdl-textfield__error">Input is not a number!</span>


  </div>
