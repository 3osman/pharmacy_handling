      <div class="mdl-card mdl-shadow--2dp demo-card-wide">
        <div class="mdl-card__title">
          <h2 class="mdl-card__title-text">Welcome</h2>
        </div>
    
        <div class="mdl-card__actions mdl-card--border">
          <% if user_signed_in? %>
            <%= link_to 'New Prescription', prescription_path,class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
            <% else %>
            <%= link_to('Login', new_user_session_path, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" ) %>  
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
