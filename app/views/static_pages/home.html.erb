<style>
  .demo-card-wide.mdl-card {
    width: 512px;
  }
  .demo-card-wide > .mdl-card__title {
    color: #fff;
    height: 250px;
    background: url('http://pharmacyu.ca/wp-content/uploads/2013/11/Rosetown-pharmacy-04.jpg') center / cover;
  }
  .demo-card-wide > .mdl-card__menu {
    color: #fff;
  }
